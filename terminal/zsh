export PS1="%/ $ "
export EDITOR="/usr/bin/nvim"

# Alias
alias cls="clear"
alias vi="vim"
alias ls="ls --color=auto"
alias ll="ls -al"
alias vi="nvim"
alias vim="nvim"

# Functions
# Find file
function ff() {
  if [ $# = 1 ]; then
    find . -name $1 -print
  else
    find $1 -name $2 -print
  fi
}
