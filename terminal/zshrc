HISTSIZE=10000
SAVEHIST=10000
HISTFILE=~/.zsh_history

export EDITOR="/usr/bin/nvim"

export FZF_DEFAULT_OPTS='--height 40% --layout=reverse --border --inline-info'

# Alias
alias cls="clear"
alias vi="vim"
alias ls="ls --color=auto"
alias ll="ls -al"
alias vi="nvim"
alias vim="nvim"
alias rm="rm -i"

# Functions
# Find file
function ff() {
  if [ $# = 1 ]; then
    find . -name $1 -print
  else
    find $1 -name $2 -print
  fi
}
